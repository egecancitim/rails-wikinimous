<div class="container">
  <h1><%= @article.title %></h1>
<p><%= @article.content %></p>
<div id="edit">
 <%= link_to edit_article_path(@article) do %>
 <i class="fas fa-pencil-alt"></i>
 <% end %>
</div>
<div id="delete">
  <%= link_to article_path(@article), method: :delete, data: {confirm: "Are you certain?"} do %>
  <i class="fas fa-trash"></i>
  <% end %>
</div>
<div id="back">
  <%= link_to articles_path do %>
  <i class="fas fa-arrow-left"></i>
  <% end %>
</div>
</div>
